<h1>Admin Login</h1>
<%= form_with url: admin_login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit 'Login' %>
  </div>
<% end %>

<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>