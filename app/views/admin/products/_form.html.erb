<%= form_with model: [:admin, product], local: true, html: { class: 'product-form' } do |f| %>
  <div class="mb-3">
    <%= f.label :category_id, class: 'form-label' %>
    <%= f.collection_select :category_id, Category.all, :id, :category_name, { prompt: 'Select Category' }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :product_name, class: 'form-label' %>
    <%= f.text_field :product_name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.label :price, class: 'form-label' %>
    <%= f.number_field :price, step: 0.01, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :size, class: 'form-label' %>
    <%= f.text_field :size, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :colour, class: 'form-label' %>
    <%= f.text_field :colour, class: 'form-control' %>
  </div>

  <div class="mb-3 text-center">
    <%= f.submit 'Save Product', class: 'btn btn-primary' %>
  </div>
<% end %>