<h1>Your Cart</h1>

<% if @products.any? %>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= @cart.find { |item| item[:product_id] == product.id }[:quantity] %></td>
          <td>
            <%= link_to 'Remove', remove_cart_path(product_id: product.id), method: :delete %> |
            <%= form_with url: update_cart_path(product_id: product.id), method: :patch do |f| %>
              <%= f.number_field :quantity, value: @cart.find { |item| item[:product_id] == product.id }[:quantity], min: 1 %>
              <%= f.submit 'Update' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Your cart is empty.</p>
<% end %>